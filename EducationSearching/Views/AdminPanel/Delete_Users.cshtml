@model EducationSearching.UserProfile

@{
    ViewBag.Title = "Удалить";
}
<article>

<h2>Удалить</h2>

<h3>Вы хотите удалить?</h3>
<fieldset>
    <legend>UserProfileR</legend>

    <div class="display-label">
        <br />
       Пользователь:
    </div>
    <div class="display-field">
        Логин: @Html.DisplayFor(model => model.UserName)
    </div>
    <div class="display-field">
        ФИО: @Html.DisplayFor(model => model.FIOShort)
    </div>
    <br />
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Удалить" class="btn btn-danger btn-small"/> |
        <button onclick="location.href='@Url.Action("Index_Users", "AdminPanel")'" type="button" class="btn btn-primary">Назад к списку</button>
    </p>
}
</article>

