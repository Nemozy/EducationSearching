<!DOCTYPE html>
@using EducationSearching.Models;
<html lang="ru">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title — www.VSTU.ru</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                            <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                            @if (HttpContext.Current.User.Identity.IsAuthenticated && (!(string.IsNullOrEmpty(User.Identity.Name))))
                            {
                                UsersContext db = new UsersContext();
                                EducationSearching.Models.UserProfile user = db.UserProfiles.FirstOrDefault(u => u.UserName.ToLower() == User.Identity.Name.ToLower());
                                if (user == null)
                                {
                                    ViewBag.UserRole = "Anonymous";
                                }
                                else 
                                { 
                                    EducationSearching.Models.webpages_UsersInRoles userInRoles = db.userInRoles.Find(user.UserId);
                                    if (userInRoles == null)
                                    {
                                        ViewBag.UserRole = "Anonymous";
                                    }
                                    else
                                    { 
                                        EducationSearching.Models.webpages_Roles roles = db.Roles.Find(userInRoles.RoleId);
                                        if (userInRoles == null)
                                        {
                                            ViewBag.UserRole = "Anonymous";
                                        }

                                        if (string.Equals(roles.RoleName, "Administrator"))
                                        { 
                                            <li>@Html.ActionLink("Админ панель", "Index", "Admin")</li>
                                        }
                                    }
                                }
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year — www.VSTU.ru</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
