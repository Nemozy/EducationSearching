@model EducationSearching.PredmetForUser

@{
    ViewBag.Title = "Редактирование записи.";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Редактирование записи.</h4>
        <hr />
        <p class="error">@ViewBag.MessageErr</p>
        @Html.ValidationSummary(true)

        <div class="form-group">

            @{
            List<SelectListItem> списокГодов = new List<SelectListItem>();//Список значений для DDL
            List<SelectListItem> списокСеместров = new List<SelectListItem>();//Список значений для DDL
            List<SelectListItem> списокПреподователей = new List<SelectListItem>();//Список значений для DDL
            List<SelectListItem> списокПредметов = new List<SelectListItem>();//Список значений для DDL
            списокСеместров.Add(new SelectListItem() { Text = "1 семестр" });//Заполняем его
            списокСеместров.Add(new SelectListItem() { Text = "2 семестр" });//Заполняем его
            }

            @for (int i = 2013; i < 2015; i++)
            {
                списокГодов.Add(new SelectListItem() { Text = i.ToString() });//Заполняем его
            }

            <div class="form-group">
                Учебный год:
                <div class="col-md-10">
                    @Html.DropDownList("spisokYear", списокГодов)
                </div>
            </div>
            <br />
            <div class="form-group">
                Семестр:
                <div class="col-md-10">
                    @Html.DropDownList("spisokSemestr", списокСеместров)
                </div>
            </div>

            <br />

            Выберите преподователя:
            <br />
            <select name="FIOUserID">
                <option disabled selected>Выберите преподователя:</option>
                @foreach (string item in ViewBag.userSrt)
                {
                    string idUser = item.Split('|')[0];
                    string FIOUser = item.Split('|')[1];
                    <option value=@idUser>@FIOUser</option>
                }
            </select>
            <br />
            <br />
            Выберите дисциплину:
            <br />
            <select name="predmetId">
                <option disabled selected>Выберите дисциплину:</option>
                @foreach (string item in ViewBag.predmetSrt)
                {
                    string idPredmet = item.Split('|')[0];
                    string predmet = item.Split('|')[1];
                    <option value=@idPredmet>@predmet</option>
                }
            </select>
            <br />
            <br />
            Поток:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.potok, new { @class = "whatever-class", @cols = 80, @rows = 3,  autocomplete = "off" })
            </div>

            Количество групп:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.kolvoGrupp, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Количество подгрупп:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.kolvoPodGrupp, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Количество студент:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.kolvoStudent, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Лекции:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.lekcii, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Практика план:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.praktikaPlan, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Практика всего:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.praktikaVsego, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Лабораторные план:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.labPlan, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Лабораторные всего:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.labVsego, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Консультации тек.:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.konsultTek, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Консультации пр. экз:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.konsultEkz, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Экзамен:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.exzamen, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Зачет:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.zachet, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Рук-во практ.:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.rykvoPract, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Рук-во ДЖП. ПР.:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.rykvoDJPpr, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>

            <br />
            Часы на ОргСРС:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.chasSRS, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Часы за рейт.:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.chasReit,new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>

            <br />
            Рук-во аспир.:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.rykvoAspirant, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>

            <br />
            Всего:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.vsego, new { @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Ассистенты:
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.assistent, new { @class = "whatever-class", @cols = 50, @rows = 2,  autocomplete = "off" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Создать" class="btn btn-success" >Сохранить</button>
            </div>
        </div>
    </div>
}

<div>
    <button onclick="location.href='@Url.Action("Index", "Home")'" type="button" class="btn btn-primary">Вернуться</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
