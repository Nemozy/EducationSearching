

@{
    ViewBag.Title = "Добавление предмета.";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Добавление предмета.</h4>
        <hr />
        <p class="error">@ViewBag.MessageErr</p>
        @Html.ValidationSummary(true)

        <div class="form-group">
            <select name="spisokYear">
            <option disabled selected>Выберите год:</option>
                @for (int i = 2013; i < 2015; i++)
                {
                    <option value=@i>@i.ToString()</option>
                }
            </select>

            <select name="spisokSemestr">
                <option disabled selected>Выберите семестр:</option>
                <option value="1 семестр">1 семестр</option>
                <option value="2 семестр">2 семестр</option>
            </select>
            
            <br />

            <select name="FIOUserID">
                <option disabled selected>Выберите преподователя:</option>
                @foreach (string item in ViewBag.userSrt)
                {
                    string idUser = item.Split('|')[0];
                    string FIOUser = item.Split('|')[1];
                    <option value=@idUser>@FIOUser</option>
                }
            </select>

            <br />

            <select name="predmetId">
                <option disabled selected>Выберите дисциплину:</option>
                @foreach (string item in ViewBag.predmetSrt)
                {
                    string idPredmet = item.Split('|')[0];
                    string predmet = item.Split('|')[1];
                    <option value=@idPredmet>@predmet</option>
                }
            </select>
            <br />
            <br />
            Поток:
            <div class="col-md-10">
                @Html.TextArea("potok", "", new { id = "potok", @class = "whatever-class", @cols = 80, @rows = 3,  autocomplete = "off" })
            </div>

            Количество групп:
            <div class="col-md-10">
                @Html.TextArea("kolvoGrupp", "", new { id = "kolvoGrupp", @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
            Количество подгрупп:
            <div class="col-md-10">
                @Html.TextArea("kolvoPodGrupp", "", new { id = "kolvoPodGrupp", @class = "whatever-class", @cols = 20, @rows = 1,  autocomplete = "off" })
            </div>
            <br />
